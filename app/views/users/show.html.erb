<%= render 'users/user.side', user: @user %>
<%= render 'books/book.side', book: @book %>

    <div class="col-xs-9">
      <h2>Books</h2>
        <table class="table">
        <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        </thead>
        <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format:"jpeg", fallback: "no_image.jpg"%></td>
            <td>
              <%= link_to book_path(book.id) do%>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </table>
    </div>

</div>

