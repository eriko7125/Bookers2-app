<%= render 'users/user.side', user: current_user %>
<%= render 'books/book.side', book: @book %>

    <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      </thead>
      <% @books.each do |book| %>
            <td><%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format:"jpeg", fallback: "no_image.jpg", size: "40x40" %>
                <% end %>
                </td>
              <td><%= link_to book_path(book.id) do%>
                <%= book.title %>
              <% end %></td>
              <td><%= book.body %>
            </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>